@using RestSys.Resources
<!DOCTYPE html>
<html ng-app="RestSysAngular">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
    <link href='http://fonts.googleapis.com/css?family=Oswald:400,700&subset=latin,latin-ext' rel='stylesheet' type='text/css'>
	<title>RestSys @ViewBag.Title</title>
	@Styles.Render("~/bundles/css")
	@Scripts.Render("~/bundles/js")
	@RenderSection("scripts", required: false)
    <meta name="description" content="RestSys" />
</head>
<body>
	<div id="page">
		<ul id="menu">
			<li>@Html.ActionLink(Resources.Products, "Index", "Products")</li>
			<li>@Html.ActionLink(Resources.Stocks, "Index", "Stocks")</li>
			<li>@Html.ActionLink(Resources.Navigation, "Index", "Navigation")</li>
            <li>@Html.ActionLink(Resources.Users, "Index", "Account")</li>
            <li>@Html.ActionLink(Resources.Orders, "Index", "Orders")</li>
		</ul>
		<div id="content">
			@RenderBody()
		</div>
	</div>
</body>
</html>
